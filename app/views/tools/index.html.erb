<h1><%= pluralize(@tools.size, 'Tool') %></h1>

<%= link_to "Add New Tool", new_tool_path %>

<% @tools.each do |tool| %>
  <article>
    <header>
      <h2><%= link_to tool.name, tool %></h2>
    </header>
    <p>
      <%= truncate(tool.description, length: 35, separator: ' ') %>
    </p>
    <tr>
      <th>Price:</th>
      <td><%= format_price(tool) %></td>
    </tr>
  </article>
<% end %>
<%= render 'footer' %>
